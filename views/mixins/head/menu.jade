mixin top-menu(items, classname)
	ul.main-menu(class=classname)
		each item in items
			li.m-item(class="#{item.active ? 'active' : ''}")
				a(href=item.link)= item.label
				i.whl
				if item.child
					.hover-menu
						table(cellpadding='0', cellspacing='0')
							tbody
								tr
									td
										ul
											each child in item.child
												li
													a(href=child.link)= child.label